<view class="container">
  <image src="{{solvedFlag?'/assets/image/done.svg':'/assets/image/undone.svg'}}" class="icon" />
  <view class="right">
    <view class="item">
      <image class="icon" src="/assets/image/view.svg" mode="heightFix" />
      {{viewCount}}
    </view>
    <view class="item">
      <image bind:tap="likeQuestion" class="icon" src="{{likeStatus=='已点赞'?'/assets/image/like_done.svg':'/assets/image/like.svg'}}" mode="heightFix" />
      {{likeCount}}
    </view>
    <view class="item">
      <image class="icon" src="/assets/image/comment.svg" mode="heightFix" />
      {{commentCount}}
    </view>
  </view>
</view>