<view class="container {{multiLine?'column':''}}">
  <view class="label">{{label}}</view>
  <view class="input-box">
    <textarea class="textarea" wx:if="{{multiLine}}" value="{{value}}" maxlength="1500" auto-height="true" placeholder="{{placeholder}}" bind:input="onInput" data-key="{{key}}"></textarea>
    <input wx:else type="text" value="{{value}}" class="input" placeholder="{{placeholder}}" bind:input="onInput" data-key="{{key}}" password="{{password}}" />
  </view>
</view>