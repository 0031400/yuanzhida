.item {
  border: 1px solid black;
  width: 100%;
  position: relative;
  height: 300rpx;
}

.image {
  height: 100%;
  width: 100%;
  opacity: 40%;
}

.trash {
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 100;
  border: black solid 1px;
  background-color: #D9D9D9;
  opacity: 75%;
}