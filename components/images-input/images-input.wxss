.item {
  border: 1px solid black;
  position: relative;
  height: 300rpx;
}

.image {
  height: 100%;
  width: 100%;
  opacity: 40%;
}

.trash {
  height: 200rpx;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 100;
  border: black solid 1px;
  background-color: #D9D9D9;
  opacity: 75%;
}

.button-container {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}