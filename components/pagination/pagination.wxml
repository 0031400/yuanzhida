<view class="container" wx:if="{{total}}">
  <block wx:for="{{indexList}}" wx:key="*this">
    <view wx:if="{{item==current}}" class="item {{item==current?'current':''}}"> {{item}} </view>
    <view class="item" bind:tap="submitRedirect" wx:else data-page="{{item}}"> {{item}} </view>
  </block>
  <the-input id="input" class="input" bind:input="onInput"></the-input>
  <the-button text="чбошод" bind:the_tap="submitRedirect" size="small"></the-button>
</view>