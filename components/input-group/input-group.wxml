<block wx:for="{{inputItems}}" wx:key="key">
  <the-input class="input" wx:if="{{item.type=='text'}}" text="{{item.title}}" bind:input="onInput" key="{{item.key}}" multiLine="{{item.multiLine}}" password="{{item.password}}"></the-input>
  <the-images-input class="input" wx:if="{{item.type=='images'}}" bind:input="onInput"></the-images-input>
  <the-subjects-selector class="input" bind:input="onInput" wx:if="{{item.type=='subject'}}"></the-subjects-selector>
</block>